<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClassCSschedule">
        <activity android:name=".SignUpActivity" />


        <!-- Define all activities -->
        <activity android:name=".ManageClassesActivity"/>
        <activity android:name=".ViewStudentSchedulesActivity"/>
        <activity android:name=".QuickActionsActivity"/>
        <activity android:name=".TeacherDashboardActivity"/>
        <activity android:name=".StudentDashboardActivity"/>
        <activity android:name=".FeedbackActivity"/>
        <activity android:name=".DashboardActivity"/>
        <activity android:name=".ScheduleActivity"/>
        <activity android:name=".MainActivity"/>

        <!-- Set LoginActivity as the Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            tools:ignore="DuplicateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>

    </application>

</manifest>
