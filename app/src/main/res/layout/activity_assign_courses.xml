<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/assign_course_to_departments"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFD700"
            android:layout_marginTop="16dp"/>

        <!-- Department Name Input -->
        <EditText
            android:id="@+id/input_form_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/department_namel"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Class Year Input -->
        <EditText
            android:id="@+id/class_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/class_year_first_second_third_fourthh"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Current Year Input -->
        <EditText
            android:id="@+id/input_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/current_yearrl"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Current Semester Input -->
        <EditText
            android:id="@+id/input_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/current_semesterl"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Number of Sections Input -->
        <EditText
            android:id="@+id/input_number_of_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/number_of_sectionss"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Course List Container -->
        <LinearLayout
            android:id="@+id/course_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

        <!-- Add Course Button -->
        <Button
            android:id="@+id/btn_add_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_coursee"
            android:textColor="#000000"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="8dp"/>

        <!-- Assign Button -->
        <Button
            android:id="@+id/btn_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assign_courses"
            android:textColor="#000000"
            android:backgroundTint="#FFD700"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
